#===============================================================================
# FILE: Makefile.in
#
# PURPOSE: Template for integrate/Makefile.  When 'configure' is run, a new
# Makefile will be created (overwriting the last) from this template.
#
#-------------------  object files  --------------------------------------------
CORE_OBJ = integrate.o \
	   integrate_1d_ctu.o \
	   integrate_2d_ctu.o \
	   integrate_3d_ctu.o \
	   integrate_1d_vl.o \
	   integrate_2d_vl.o \
	   integrate_3d_vl.o \
           integrate_1d_vl_sr.o \
           integrate_2d_vl_sr.o \
           integrate_3d_vl_sr.o

OBJ = $(CORE_OBJ)

#-------------------  macro definitions  ---------------------------------------

SRC = $(OBJ:.o=.c)

include ../../Makeoptions

BLOCKINC =
BLOCKLIB =

#--------------------  implicit rules  -----------------------------------------

.c.o:
	${CC} ${CFLAGS} -c $<

#---------------------  targets  -----------------------------------------------

all:	compile

.PHONY: compile
compile: ${OBJ}
#	ar rcs libplimpton.a ${OBJ}

help:
	@echo This is the /src/integrators Makefile
	@echo Type 'make compile' to generate integrators object files
	@echo Type 'make clean'   to remove '*.o' files
	@echo OBJ=$(OBJ)

.PHONY: clean
clean:
	rm -f *.o *.a Makedepend

depend: Makedepend

Makedepend:
	${CC} -MM ${CFLAGS} ${SRC} > Makedepend

# this forces a rebuild of all objects, if code re-configure'd
include Makedepend
