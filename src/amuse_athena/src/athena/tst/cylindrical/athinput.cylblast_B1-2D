NGrid_x3        = 1

<problem>
gamma           = 1.6666666667  # gamma = C_p/C_v
iso_csound      = 0.4082482905  # equavalent to sqrt(gamma*p/d) for p=0.1, d=1
pamb            = 0.1           # Ambient pressure
rho0            = 1.0           # Background density
prat            = 100.0         # Pressure ratio initially
